<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dictionary_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jenia.myengemprove.MyTesting">

    <Button
        android:text="@string/chekResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chekResult"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerUnit"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_info"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer"
        android:layout_below="@+id/text_view_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/myAnswer"
        android:hint="@string/myAnswer"
        android:layout_below="@+id/answer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:text="@string/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:id="@+id/nextQuestion"
        android:layout_below="@+id/chekResult"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerUnit"
        android:layout_below="@+id/myAnswer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:entries="@array/units"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startTest"
        android:text="Старт"
        android:layout_below="@+id/chekResult"
        android:layout_toRightOf="@+id/nextQuestion"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <!--<Button
        android:text="@string/showCorrectAnss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showAnswer"
        android:layout_above="@+id/nextQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        an
        />-->

</RelativeLayout>
